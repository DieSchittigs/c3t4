{
    "name": "dieschittigs/c3t4",
    "description": "Converts Contao 3.5 Modules to Contao 4.4 Bundles",
    "keywords": ["framework", "console", "contao"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Christopher MÃ¼hl",
            "email": "christopher@dieschittigs.de"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "laravel-zero/framework": "5.6.*",
        "padarom/laravel-zero-interactive-mode": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "DieSchittigs\\C3t4\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "ext-posix": "0"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php c3t4 app:rename"
        ],
        "other-cmd": [
            "@php c3t4 app:build"
        ]
    },
    "repositories": [
        { "type": "path", "url": "../laravel-zero-interactive-mode" }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["c3t4"]
}
